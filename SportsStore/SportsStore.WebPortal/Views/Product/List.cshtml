@using SportsStore.DB.Entities
@model IEnumerable<Product>

@{
    ViewBag.Title = "Products";
}

@foreach (Product p in Model)
{
    <div>
        <h3>@p.Name</h3>
        @p.Description
        <h4>@p.Price</h4>
    </div>
}

@foreach (Product p in Model)
{
    <div class="well">
        <h3>
            <strong>@p.Name</strong>
            <span class="pull-right label label-primary">@p.Price.ToString("c")</span>
        </h3>
        <span class="lead">
            @p.Description
        </span>
    </div>
}